<header>
  <div class="header">
    <nav class="navbar navbar-expand-lg bg-dark">
      <div class="container">
        <a class="navbar-brand text-white" href="/"><i class="fa-light fa-headphones-simple"></i>Livespot</a>
        <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
          aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to "ホーム", root_path, class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "メッセージ", message_path, class: "nav-link" %>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                設定
              </a>
              <% if logged_in? %>
                <ul class="dropdown-menu">
                  <% if current_user.is_artist == true %>
                    <li><%= link_to "ライブ設定", new_life_path, class: "dropdown-item" %></li>
                  <% end %>
                  <li><%= link_to "プロフィール", user_path(current_user), class: "dropdown-item" %></li>
                  <li><%= link_to "ユーザー設定", edit_user_path(current_user), class: "dropdown-item" %></li>
                  <li><%= link_to "ログアウト", logout_path, class: "dropdown-item", data: { "turbo-method": :delete } %></li>
                  <li>
                    <hr class="dropdown-divider">
                  </li>
                  <li><a class="dropdown-item" href="#">その他</a></li>
                </ul>
              <% else %>
                <ul class="dropdown-menu">
                  <li><%= link_to "無料会員登録", new_user_path, class: "dropdown-item" %></li>
                  <li><%= link_to "ログイン", login_path, class: "dropdown-item" %></li>
                </ul>
              <% end %>
            </li>
          </ul>
          <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="場所" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">search</button>
          </form>
        </div>
      </div>
    </nav>
  </div>
</header>