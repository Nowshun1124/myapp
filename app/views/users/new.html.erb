<% provide(:title, "無料会員登録") %>
<div class="row content">
	<div class="col-md-6 offset-md-3 sign-up-form">
		<%= form_with(model: @user) do |f| %>
			<%= render 'shared/error_messages' %>
			
			<%= f.label :username, "ユーザーネーム" %>
			<%= f.text_field :username, class: "form-control" %>

			<%= f.label :email, "メールアドレス" %>
			<%= f.text_field :email, class: "form-control" %>

			<%= f.label :password, "パスワード" %>
			<%= f.text_field :password, class: "form-control" %>

			<%= f.label :password_confirmation, "パスワード確認" %>
			<%= f.text_field :password_confirmation, class: "form-control" %>

			<%= f.label :is_artist, class: "checkbox inline" do %>
        <%= f.check_box :is_artist %>
        <span>アーティストアカウントとして登録する</span>
      <% end %>

			<%= f.submit "確認", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>